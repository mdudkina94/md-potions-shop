{
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "bracketSameLine": false,
    "overrides": [
        {
            "files": ["*.ts", "*.mts", "*.d.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "parser": "html"
            }
        },
        {
            "files": ["*.component.html"],
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": ["*.scss"],
            "options": {
                "parser": "scss"
            }
        }
    ]
}
